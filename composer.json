{
    "name": "dhenfie/template-system",
    "description": "Simple PHP Template Engine",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "exclude-from-classmap": ["tests/"],
            "Dhenfie\\TemplateSystem\\": "src/"
        },
        "files": [
            "src/Helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Dhenfie\\TemplateSystem\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "dhenfie",
            "email": "fajarsusilo1600@gmail.com"
        }
    ],
    "minimum-stability": "stable",
